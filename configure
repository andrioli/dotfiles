#!/bin/bash

mkdir -p ~/.config/zsh && stow zsh
mkdir -p ~/.config/git && stow git
mkdir -p ~/.config/btdt && stow btdt
gpg -k && stow gnupg && keybase pgp pull-private --all && rm ~/.gnupg/public-keys.d/.\#*
stow vim && vim -c "PlugInstall" -c "q" -c "q"
stow starship
stow maven

mkdir -p ~/.config/jenv/versions
ln -ns /Library/Java/JavaVirtualMachines/temurin-8.jdk/Contents/Home ~/.config/jenv/versions/AdoptiumTemurin-1.8
ln -ns /Library/Java/JavaVirtualMachines/temurin-11.jdk/Contents/Home ~/.config/jenv/versions/AdoptiumTemurin-11
ln -ns /Library/Java/JavaVirtualMachines/temurin-17.jdk/Contents/Home ~/.config/jenv/versions/AdoptiumTemurin-17
ln -ns /Library/Java/JavaVirtualMachines/temurin-21.jdk/Contents/Home ~/.config/jenv/versions/AdoptiumTemurin-21
ln -ns /Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home ~/.config/jenv/versions/Apple-1.6
echo -n "AdoptiumTemurin-1.8" > ~/.config/jenv/version
